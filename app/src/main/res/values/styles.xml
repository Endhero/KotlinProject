<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Yuwell.Base.AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="arrow_back_color">#333333</item>
        <item name="android:windowBackground">@color/contentBackground</item>
        <item name="actionMenuTextColor">@color/greyText</item>
        <item name="toolbar_background">@android:color/white</item>
        <item name="toolbar_title_color">@color/normalText</item>
        <item name="android:textColor">@color/normalText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="round_rectangle_button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="round_rectangle_padding">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/shape_round_rectangle_white</item>
    </style>

    <style name="round_rectangle_padding_gray">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:background">@drawable/shape_round_rectangle_gray</item>
    </style>

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tipText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="popupwindow">
        <item name="android:windowEnterAnimation">@animator/fade_up</item>
        <item name="android:windowExitAnimation">@animator/fade_down</item>
    </style>

    <style name="no_data_text">
        <item name="android:drawablePadding">13dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tipText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_code_input">
        <item name="android:background">@drawable/bg_auth_code_edit</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
    </style>

</resources>
