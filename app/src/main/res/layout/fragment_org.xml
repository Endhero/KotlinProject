<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:background="@drawable/round_rectangle_white_5dp">

        <TextView
            android:id="@+id/label_org_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="单位名称"/>

        <TextView
            android:id="@+id/text_org_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/label_org_name"
            app:layout_constraintBottom_toBottomOf="@id/label_org_name"
            app:layout_constraintLeft_toRightOf="@id/label_org_name"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="right|center_vertical"
            tools:text="南京鱼跃"
            android:text="@string/none_"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/label_org_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/label_org_address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toBottomOf="@id/label_org_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="单位地址"/>

        <TextView
            android:id="@+id/text_org_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/label_org_address"
            app:layout_constraintBottom_toBottomOf="@id/label_org_address"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/label_org_address"
            android:gravity="right|center_vertical"
            android:ellipsize="end"
            tools:text="南京鱼跃"
            android:text="@string/none_"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/label_org_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/label_org_province"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toBottomOf="@id/label_org_address"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="省份"/>

        <TextView
            android:id="@+id/text_org_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_org_province"
            app:layout_constraintBottom_toBottomOf="@id/label_org_province"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="湖北"
            android:text="@string/none_"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/label_org_province"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/label_org_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toBottomOf="@id/label_org_province"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="城市"/>

        <TextView
            android:id="@+id/text_org_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_org_city"
            app:layout_constraintBottom_toBottomOf="@id/label_org_city"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="武汉"
            android:text="@string/none_"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/label_org_city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/label_deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toBottomOf="@id/label_org_city"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="交付日期"/>

        <TextView
            android:id="@+id/text_deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_deliver_time"
            app:layout_constraintBottom_toBottomOf="@id/label_deliver_time"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="2020-03-18"
            android:text="@string/none_"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/label_deliver_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/label_warranty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            app:layout_constraintTop_toBottomOf="@id/label_deliver_time"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/tipText"
            android:textSize="13sp"
            android:text="质保时长"/>

        <TextView
            android:id="@+id/text_warranty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_warranty"
            app:layout_constraintBottom_toBottomOf="@id/label_warranty"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="3年"
            android:text="@string/none_"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>