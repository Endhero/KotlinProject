<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/imagebutton_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_button_pause"
        android:background="@android:color/transparent"
        android:onClick="onClick" />
    
    <ImageButton
        android:id="@+id/imagebutton_voice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_voice"
        android:background="@android:color/transparent"
        android:onClick="onClick" />
    
    <Button
        android:id="@+id/button_quality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_round_rectangle_white_stroke"
        android:onClick="onClick"
        android:text="@string/quality_hd"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <com.videogo.widget.CheckTextButton
            android:id="@+id/button_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_full_screen" />
    </LinearLayout>

</LinearLayout>